<div class="page-header">
  <h1>My friends</h1>
</div>

<% if @friends.any? %>
  <div class="row">
    <div class="col-sm-10">
      <table class="table table-striped table-bordered table-condensed">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @friends.each do |friend| %>
            <tr>
              <td><%= friend.full_name %></td>
              <td><%= friend.email %></td>
              <td>
                <%= link_to 'View profile', friend, class: 'btn btn-primary btn-xs' %>
                <%= link_to 'Remove friend', friendship_path(friend), method: :delete,
                           data:{ confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <div class="row">
    <p class="lead">You don't have any friends yet, why not add some?</p>
  </div>
<% end %>

<%= render 'friends/lookup' %>
